@model PaginationViewModel;
@if (Model.ItemsCount > 1)
{
    <div class="row">
        <nav class="col-md-12 text-center" aria-label="Page navigation">
            <ul class="pagination">
                @for (int i = 1; i <= Model.ItemsCount; i++)
                {
                    <li class="@(Model.CurrentPage == i ? "active" : String.Empty)"><a asp-route-page="@i"> @i </a></li>
                }
            </ul>
        </nav>
    </div>
}@*pas model car c'est pas stocker dans la base de donnée*@